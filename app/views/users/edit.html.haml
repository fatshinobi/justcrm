%h1 Editing user

= bootstrap_form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field{:class=>"form_field form-group"}
    = f.text_field :name, :id=>"user_name"
  .field{:class=>"form_field form-group"}
    = f.text_field :email, :id=>"user_email"
  .field{:class=>"form_field form-group"}
    = f.password_field :password, :id=>"user_password"
  .field{:class=>"form_field form-group"}
    = f.password_field :password_confirmation, :id=>"user_password_confirmation"
  .actions
    = f.submit 'Save', :class=>"form_accept_button btn btn-success"

= link_to 'Back', users_path
